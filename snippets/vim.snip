snippet cpo
    let s:save_cpo = &cpo
    set cpo&vim

  if exists('s:save_cpo')
    let &cpo = s:save_cpo
    unlet s:save_cpo
  endif

snippet neobundle#tap
alias tap
    if neobundle#tap('${1}') 
      call neobundle#config({
        \ })
      function! neobundle#tapped.hooks.on_source(bundle) 
      endfunction
    endif 
snippet tab
    set expandtab
    set autoindent
    set tabstop=4
    set shiftwidth=4
